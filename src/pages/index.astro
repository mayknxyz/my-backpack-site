---
import HintButton from "@components/atoms/HintButton.svelte";
import BackpackHero from "@components/organisms/BackpackHero.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout>
	<main
		id="main"
		class="flex min-h-screen flex-col items-center justify-center px-4"
	>
		<BackpackHero />
		<h1
			class="mt-6 text-center font-sans font-bold text-on-surface"
			style="font-size: clamp(1.75rem, 4vw, 3rem);"
		>
			my-backpack
		</h1>
		<p
			class="mt-2 max-w-md text-center text-on-surface-muted"
			style="font-size: clamp(0.95rem, 2vw, 1.25rem);"
		>
			dev tools I built and use
			<br />
			<span style="font-size: 0.8em;">free and open-source</span>
		</p>
	</main>
	<HintButton client:visible text="use your mouse to open the bag" mobileText="tap the bag to open" side="left" />
	<HintButton client:visible text="use your keyboard to open the tools" side="right" />
</BaseLayout>
